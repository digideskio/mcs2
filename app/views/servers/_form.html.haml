= form_for @server do |f|
  -if @server.errors.any?
    #error_explanation
      %h2= "#{pluralize(@server.errors.count, "error")} prohibited this server from being saved:"
      %ul
        - @server.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name, "Server Name"
    %br
    = f.text_field :name
  .field
    = f.label :description, "Description"
    %br
    = f.text_area :description
  .field
    = f.label :mc_server_address, "Server Address"
    %br
    = f.text_field :mc_server_address
  .field
    = f.label :port
    %br
    = f.text_field :port
  .field
    = f.label :location
    %br
    = f.text_field :location
  .field
    = f.label :website, "Website URL"
    %br
    = f.text_field :website
  .field
    = f.label :game_mode, "Game Mode"
    - [[2, "Creative"], [1, "Survival"], [0, "Other"]].each do |gm|
      %br
      = f.label gm[1]
      = f.radio_button :game_mode, gm[0], :checked => gm[0] == 2
  .field
    = f.label :whitelist_url, "Whitelist Website URL"
    %br
    = f.text_field :whitelist_url
  .actions
    = f.submit 'Save'
