<!DOCTYPE html>
%html{html_attrs}
  %head
    =stylesheet_link_tag 'screen.css', :media => 'screen, projection'
    =stylesheet_link_tag 'print.css', :media => 'print'
    /[if IE]
      =stylesheet_link_tag 'ie.css', :media => 'screen, projection'
    %title Minecraft Server Corp
    =javascript_include_tag :defaults
    %link{:href => "http://fonts.googleapis.com/css?family=VT323", :rel => "stylesheet", :type => "text/css"}
    %link{:href => "http://fonts.googleapis.com/css?family=Cabin+Sketch:bold", :rel => "stylesheet", :type => "text/css"}
    %script{:src => "/javascripts/application.js?1305402372", :type => "text/javascript"}
    %link{:href => "http://fonts.googleapis.com/css?family=Neuton", :rel => "stylesheet", :type => "text/css"}/
    %link{ :href => "http://fonts.googleapis.com/css?family=Play", :rel => 'stylesheet', :type => "text/css"}/
  %body
    #container
      %header#header
        %div#title
          =link_to "Minecraft Server Corp", root_path
        %br
        %div#notifications
          - if !notice.nil?
            %div.success
              =notice
          - if !alert.nil?
            %div.error
              =alert
        %nav
          %ul
            %li
              -if user_signed_in?
                =link_to current_user.username, current_user
              -else
                =link_to "Home", root_path
            %li
              -if user_signed_in?
                =link_to "User list", users_path
              -else
                =link_to "Register", new_user_registration_path
            %li 
              -if user_signed_in?
                =link_to "Logout", destroy_user_session_path
              -else
                =link_to "Login", new_user_session_path

      #content
        =yield
      %hr
    %footer#footer
      %div
        %img{:src => "http://www.minecraftwiki.net/images/f/f0/Cake.png"}
        %ul
          %lh Your Stuff
          - if user_signed_in?
            %li
              = link_to 'Profile', user_path(current_user.id)
            %li
              = link_to 'Account', edit_user_registration_path(current_user.id)
            %li
              Submitted Servers
          - else
            %li
              = link_to 'Login', new_user_session_path
            %li 
              = link_to 'Register', new_user_registration_path
        %ul
          %lh Our Stuff
          %li
            = link_to 'FAQ', faq_path
          %li
            = link_to 'About', about_path
          %li
            = link_to 'Suggestions', suggestions_path
          %li
            = link_to 'Contact', contact_path
        %ul
          %lh Other Stuff
          %li
            = link_to 'Minecraft', url_with_protocol('minecraft.net'), :target => "_blank"
          %li 
            = link_to 'r/Minecraft', url_with_protocol('reddit.com/r/minecraft'), :target => "_blank" 
          %li
            = link_to 'Ruby on Rails', url_with_protocol('rubyonrails.org'), :target => "_blank"
        %br.clearboth 
        
        
